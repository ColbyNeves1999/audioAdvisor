<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="refresh" content="3600">
    <title> Song Data Base | AudioAdvisor</title>
    <link rel="stylesheet" href="/css/style.css" />
</head>


<body>
    Song Data Base
    <ol>
        <% for (let i=0; i < song.length; i++) { %>
            <% if (!song[i].preview) { %>
                <span>
                    <%= song[i].songTitle %>
                        <button class="playButton">No Preview Available</button>
                        <% } else { %>
                            <span>
                                <%= song[i].songTitle %>
                                    <audio id="audio<%= i %>" src="<%=song[i].preview %>" preload="audio"></audio>
                                    <button class="playButton" onclick="toggleSong(<%= i %>)">Play/Pause</button>
                            </span>
                            <% } %>


                                <div id="audioContainer"></div>
                                <script>
                                    function toggleSong(index) {
                                        console.log(index);
                                        let audio = document.getElementById('audio' + index);
                                        let button = document.getElementById('button' + index);
                                        if (audio.paused) {
                                            document.querySelectorAll('audio').forEach(allSongs => allSongs.pause());
                                            setTimeout(() => { audio.play(); }, 500);
                                            button.innerText = 'Pause Song';
                                        } else {
                                            audio.pause();
                                            audio.currentTime = 0;
                                            button.innerText = 'Play Song';
                                        }
                                    }
                                </script>
                                <% } %>


    </ol>

    </div>
</body>

</html>